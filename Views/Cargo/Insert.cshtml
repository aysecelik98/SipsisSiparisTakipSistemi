
@{
    ViewBag.Title = "Insert";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <form class="form-horizontal" action="/Cargo/Insert" method="post" enctype="multipart/form-data">
                <div class="card-body">
                    <h4 class="card-title">Kargo Ekleme </h4>
                    <div class="row">
                          <div class="col-6 pull-left">
                    <div class="form-group row">
                        <label for="fname" class=" control-label col-form-label">Kargo Adı</label>
                        <div class="col-sm-10">
                            <input type="text" name="CargoName" class="form-control" id="fname" placeholder="Lütfen Kargo Adını Giriniz" required>
                        </div>
                    </div>


                    <div class="form-group row">
                        <div class="col-10">
                            <label class="control-label"> Kargo Logo Seçiniz</label>
                            <label for="imageUpload" class="btn btn-warning"><i class="fa fa-camera"></i> Logo Seçiniz</label>
                            <input type="file" name="resim"id="imageUpload" accept=".jpg,.png,.jpeg" style="display:none" hidden onchange="loadFile(event)"/>
                        </div>
                    </div>
                          </div>
                        <div class="col-6 pull-right">
                         <img id="gorsel"  src="~/Assets/Img/null.png" height="150" width="150"/>
                        </div>
                </div>
                 


                </div>
                <div class="border-top">
                    <div class="card-body">
                        <button type="submit" class="btn btn-primary">Kaydet</button>
                    </div>
                </div>
            </form>
        </div>


    </div>
</div>

@section JS{
    <script>
        var loadFile = function (event) {
            var gorsel = document.getElementById('gorsel');
            gorsel.src = URL.createObjectURL(event.target.files[0])
        }
    </script>
    }
