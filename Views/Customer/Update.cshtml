
@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}
@model Sipsis.DAL.DB.Customer

<div class="row">
    <div class="col-12">
        <div class="card">
            <form class="form-horizontal" action="/Customer/Update" method="post">
                <div class="card-body">
                    <h4 class="card-title">Müşteri Güncelleme </h4>
                    <input type="text" name="ID" value="@Model.ID" hidden />
                    <div class="form-group row">
                        <div class="col-6">
                            <label for="fname" class=" control-label col-form-label">Müşteri Adı</label>
                            <input type="text" name="CustomerName"  class="form-control" id="CustomerName" placeholder="Lütfen Müşteri Adını Giriniz" value="@Model.CustomerName" required>
                        </div>

                        <div class="col-6">
                            <label for="fname" class=" control-label col-form-label">Müşteri Telefonu</label>
                            <input type="text" name="CustomerPhone" class="form-control" id="CustomerPhone" placeholder="Lütfen Müşteri Telefonunu Giriniz" value="@Model.CustomerPhone" required>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-6">
                            <label for="fname" class=" control-label col-form-label">Pazaryeri Adı</label>
                            <select name="MarketID" id="MarketID" class="form-control" >
                                @foreach (var item in ViewBag.market)
                                {
                                    if (item.ID == Model.MarketID)
                                    {
                                        <option selected value="@item.ID">@item.MarketName</option>
                                    }
                                    else
                                    {
                                        <option value="@item.ID">@item.MarketName</option>
                                    }

                                }

                            </select>
                        </div>

                        <div class="col-6">
                            <label for="fname" class=" control-label col-form-label">Müşteri Adresi</label>
                            <textarea class="form-control" name="CustomerAdress" id="CustomerAdress" placeholder="Lütfen Müşteri Adresini Giriniz" required>@Model.CustomerAdress"</textarea>
                        </div>
                    </div>
                    <div class="border-top">
                        <div class="card-body">
                            <button type="submit" id="saveData" class="btn btn-warning">Güncelle</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

