
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}
@model List<Sipsis.DAL.DB.Order>
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Sipariş Listesi</h5>
                <div class="table-responsive">
                    <table id="zero_config" class="table table-striped table-bordered">
                        <thead class="text-center">
                            <tr>
                                <th>Müşteri Adı - Soyadı</th>
                                <th>Ürün Kodu</th>
                                <th>Ürün Adı</th>
                                <th>Sipariş Durum</th>
                                <th>Kargo Kodu</th>
                                <th>Kargo Firma</th>
                                <th>Sipariş Tarihi</th>
                                <th>İşlemi Yapan</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="text-center">
                                    <td>@item.Customer.CustomerName</td>
                                    <td>@item.ProductCode</td>
                                    <td>@item.ProductName</td>
                                    <td>@item.OrderStatus.StatusName</td>
                                    <td>@item.Cargo.CargoName</td>
                                    <td>@item.CargoCode</td>
                                    <td>@item.OrderDate.Value.ToShortDateString()</td>
                                    <td>@item.User.UserName</td>
                                    <td>
                                        <a href="/Order/Update/@item.ID" class="btn btn-warning"> <i class="fa fa-edit"></i>Güncelle</a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>
</div>

